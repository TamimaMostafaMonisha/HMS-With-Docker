<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="claim_report" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <property name="ireport.zoom" value="1.0"/>
    <property name="ireport.x" value="0"/>
    <property name="ireport.y" value="0"/>

    <!-- Parameters -->
    <parameter name="claimId" class="java.lang.Long"/>
    <parameter name="claimNumber" class="java.lang.String"/>
    <parameter name="patientName" class="java.lang.String"/>
    <parameter name="patientId" class="java.lang.String"/>
    <parameter name="insuranceProvider" class="java.lang.String"/>
    <parameter name="policyNumber" class="java.lang.String"/>
    <parameter name="claimDate" class="java.lang.String"/>
    <parameter name="claimAmount" class="java.math.BigDecimal"/>
    <parameter name="approvedAmount" class="java.math.BigDecimal"/>
    <parameter name="claimStatus" class="java.lang.String"/>
    <parameter name="hospitalName" class="java.lang.String"/>
    <parameter name="hospitalAddress" class="java.lang.String"/>
    <parameter name="hospitalPhone" class="java.lang.String"/>
    <parameter name="diagnosisCodes" class="java.lang.String"/>
    <parameter name="treatmentDetails" class="java.lang.String"/>

    <!-- Title -->
    <title>
        <band height="120" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Insurance Claim Report]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="35" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{hospitalName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="55" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{hospitalAddress}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="70" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Phone: " + $P{hospitalPhone}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="95" width="555" height="1"/>
            </line>

            <textField>
                <reportElement x="0" y="100" width="555" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Claim Date: " + $P{claimDate}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Page Header -->
    <pageHeader>
        <band height="100" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="10" width="120" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Claim Number:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="10" width="200" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{claimNumber}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="35" width="120" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Patient Name:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="35" width="200" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{patientName}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="60" width="120" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Patient ID:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="60" width="200" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{patientId}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="10" width="100" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Insurance:]]></text>
            </staticText>
            <textField>
                <reportElement x="450" y="10" width="105" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{insuranceProvider}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="35" width="100" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Policy Number:]]></text>
            </staticText>
            <textField>
                <reportElement x="450" y="35" width="105" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{policyNumber}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="60" width="100" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Status:]]></text>
            </staticText>
            <textField>
                <reportElement x="450" y="60" width="105" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{claimStatus}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- Column Header -->
    <columnHeader>
        <band height="50" splitType="Stretch">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="555" height="25" backcolor="#E0E0E0"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[  Claim Details]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail -->
    <detail>
        <band height="200" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="10" width="120" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Diagnosis Codes:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="120" y="10" width="435" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{diagnosisCodes} != null ? $P{diagnosisCodes} : "N/A"]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="40" width="120" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Treatment Details:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="120" y="40" width="435" height="60"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{treatmentDetails} != null ? $P{treatmentDetails} : "N/A"]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="120" width="555" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="135" width="150" height="25"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Claim Amount:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="150" y="135" width="150" height="25"/>
                <textElement textAlignment="Right">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{claimAmount}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="165" width="150" height="25"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Approved Amount:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="150" y="165" width="150" height="25"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{approvedAmount}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Page Footer -->
    <pageFooter>
        <band height="50" splitType="Stretch">
            <line>
                <reportElement x="0" y="5" width="555" height="1"/>
            </line>
            <textField>
                <reportElement x="0" y="10" width="277" height="15"/>
                <textElement textAlignment="Left">
                    <font size="8"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA["Generated on: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm:ss").format(new java.util.Date())]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="455" y="10" width="50" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="505" y="10" width="50" height="15"/>
                <textElement textAlignment="Left">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" of " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>

